<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".MainActivity">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


   <androidx.cardview.widget.CardView
       android:id="@+id/dialog"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:layout_margin="10dp"
       android:clickable="true"
       android:foreground="?android:attr/selectableItemBackground"
       android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical">

     <ImageView
         android:id="@+id/close"
         android:layout_width="70dp"
         android:layout_height="70dp"
         android:padding="5dp"
         android:src="@drawable/ic_power" />


    </LinearLayout>

   </androidx.cardview.widget.CardView>


   <androidx.appcompat.widget.Toolbar
       android:id="@+id/toolbar"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="CustomerGlu"
         android:textSize="24sp"
         android:textStyle="bold" />

     <ImageView
         android:id="@+id/logout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="10dp"
         android:src="@drawable/ic_power" />

    </RelativeLayout>


   </androidx.appcompat.widget.Toolbar>


   <RelativeLayout
       android:id="@+id/label"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:layout_below="@+id/toolbar"
       android:background="@color/black"
       android:gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/customerglu" />


   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/card_lyt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/label">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp">

     <androidx.cardview.widget.CardView
         android:id="@+id/wallet"
         android:layout_width="160dp"
         android:layout_height="150dp"
         android:layout_margin="10dp"
         android:clickable="true"
         android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="vertical">

       <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:padding="5dp"
           android:src="@drawable/purse" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Wallet"
           android:textColor="@color/black"
           android:textSize="20sp" />

      </LinearLayout>

     </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
         android:id="@+id/rewards"
         android:layout_width="160dp"
         android:layout_height="150dp"
         android:layout_margin="10dp"
         android:clickable="true"
         android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="vertical">

       <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:padding="5dp"
           android:src="@drawable/quiz" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Campaigns"
           android:textColor="@color/black"
           android:textSize="20sp" />

      </LinearLayout>

     </androidx.cardview.widget.CardView>

    </LinearLayout>

   </RelativeLayout>


   <RelativeLayout
       android:id="@+id/card_lyt2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/card_lyt">

    <LinearLayout
        android:id="@+id/shop_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp">

     <androidx.cardview.widget.CardView
         android:id="@+id/shop"
         android:layout_width="160dp"
         android:layout_height="150dp"
         android:layout_margin="10dp"
         android:clickable="true"
         android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="vertical">

       <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:padding="5dp"
           android:src="@drawable/onlineshopping" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Shop"
           android:textColor="@color/black"
           android:textSize="20sp" />

      </LinearLayout>

     </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
         android:id="@+id/cart"
         android:layout_width="160dp"
         android:layout_height="150dp"
         android:layout_margin="10dp"
         android:clickable="true"
         android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="vertical">

       <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:padding="5dp"
           android:src="@drawable/trolley" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Cart"
           android:textColor="@color/black"
           android:textSize="20sp" />

      </LinearLayout>

     </androidx.cardview.widget.CardView>

    </LinearLayout>

   </RelativeLayout>

   <Button
       android:id="@+id/show"
       android:layout_width="100dp"
       android:layout_height="70dp"
       android:layout_below="@+id/card_lyt2"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       android:background="@color/black"
       android:padding="10dp"
       android:text="Show dialog"
       android:visibility="gone" />
  </RelativeLayout>

 </ScrollView>

 <FrameLayout
     android:id="@+id/cg_banner"
     android:layout_width="match_parent"
     android:layout_height="100dp"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="10dp" />

</RelativeLayout>